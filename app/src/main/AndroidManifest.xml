<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.alex.morgan.bearlist">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.alex.morgan.bearlist.app.BearApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_bear"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_bear_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name="com.alex.morgan.bearlist.list.BearListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>